{
  "name": "jen-js-boilerplate",
  "version": "1.0.0",
  "description": "Full-featured Jen.js boilerplate with Tailwind CSS, custom styling, plugins, and modern tooling",
  "type": "module",
  "scripts": {
    "dev": "node server.js dev",
    "start": "node server.js start",
    "build": "node build.js",
    "typecheck": "tsc -p ../../tsconfig.json --noEmit",
    "clean": "rmdir /s /q dist .esbuild 2>nul || exit 0"
  },
  "dependencies": {
    "esbuild": "^0.25.0",
    "preact": "^10.25.4",
    "preact-render-to-string": "^6.5.13",
    "sirv": "^3.0.1",
    "clsx": "^2.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.0",
    "typescript": "^5.7.2",
    "tailwindcss": "^3.4.0",
    "postcss": "^8.4.0"
  }
}
