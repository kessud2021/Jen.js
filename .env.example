# Framework Configuration
NODE_ENV=production

# ========================================
# SECURITY: REQUIRED ENVIRONMENT VARIABLES
# ========================================

# JWT Secret - MUST be set in production!
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your-super-secret-key-change-this-in-production

# ========================================
# DATABASE CONFIGURATION (Optional)
# ========================================

# PostgreSQL
DATABASE_URL=postgresql://user:password@localhost:5432/dbname

# MySQL
# DATABASE_HOST=localhost
# DATABASE_PORT=3306
# DATABASE_USER=root
# DATABASE_PASSWORD=password
# DATABASE_NAME=dbname

# SQLite
# DATABASE_FILE=./data/app.db

# MongoDB
# MONGODB_URI=mongodb://localhost:27017/dbname

# ========================================
# CORS CONFIGURATION (Optional)
# ========================================

# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Allow credentials in CORS requests (use carefully!)
CORS_CREDENTIALS=false

# ========================================
# RATE LIMITING (Optional)
# ========================================

# Maximum requests per 15-minute window
RATE_LIMIT_MAX=100

# Time window in milliseconds (default: 900000 = 15 minutes)
RATE_LIMIT_WINDOW=900000

# ========================================
# LOGGING (Optional)
# ========================================

# Log level: error, warn, info, debug
LOG_LEVEL=info

# ========================================
# SESSION CONFIGURATION (Optional)
# ========================================

# Session timeout in milliseconds (default: 24 hours)
SESSION_TIMEOUT=86400000

# ========================================
# DEVELOPMENT ONLY
# ========================================

# Enable hot module reloading (dev only)
HMR_ENABLED=true

# Debug mode (dev only)
DEBUG=false
